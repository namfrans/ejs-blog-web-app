<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="titleInput">Title</label>
    <input class="form-control" type="text" name="contentTitle" id="titleInput" required>
  </div>
  <div class="form-group">
      <label for="contentArea">Post</label>
      <textarea class="form-control" type="text" name="contentInput" id="contentArea" rows="3" required></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>
